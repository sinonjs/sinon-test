{
  "name": "sinon-test",
  "version": "1.0.2",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s build:dist-folder build:bundle",
    "build:bundle": "rollup -c | uglifyjs --mangle --compress if_return,dead_code,unsafe,unsafe_comps,join_vars,comparisons,loops,collapse_vars,cascade,pure_getters > dist/sinon-test.js",
    "build:dist-folder": "mkdirp dist",
    "coverage": "nyc report --reporter text-lcov | coveralls",
    "test": "nyc mocha",
    "lint": "eslint .",
    "eslint-pre-commit": "./scripts/eslint-pre-commit",
    "prepublish": "run-p test lint build"
  },
  "greenkeeper": {
    "ignore": [
      "rollup"
    ]
  },
  "pre-commit": [
    "eslint-pre-commit"
  ],
  "author": "Christian Johansen",
  "repository": {
    "type": "git",
    "url": "http://github.com/sinonjs/sinon-test.git"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "es6-promise": "^4.0.5",
    "eslint": "^3.7.1",
    "eslint-config-defaults": "^9.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "phantomjs-prebuilt": "^2.1.7",
    "pre-commit": "^1.1.2",
    "referee": "^1.2.0",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "sinon": "^2.0.0-pre",
    "uglify-js": "^3.0.4"
  },
  "peerDependencies": {
    "sinon": "^2.0.0-pre"
  },
  "browserify-shim": {
    "buster": "global:buster"
  }
}
